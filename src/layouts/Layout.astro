<style is:global>
	@import "tailwindcss";
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	@theme{
		--breakpoint-3xl: 120rem;
	}

	/* Importa solo los módulos Flowbite que uses */
	@import "flowbite/src/components/dropdown";
	@import "flowbite/src/components/modal";

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #05061d;
		font-family: 'Roboto', sans-serif;
	}
	

	h1{
		font-family: 'Anton', sans-serif;
	}

	.tipografia {
		font-family: 'Anton', sans-serif;
		letter-spacing: 2px;
	}

	.animate-scroll-left {
		animation: scroll-left 80s linear infinite;
	}
	@keyframes scroll-left {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}
</style>
